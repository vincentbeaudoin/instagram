<h2>New photo</h2>

<%= form_with scope: :photo, url: user_photos_path, local: true do |form| %>
  <p>
    <%= form.label :caption %><br>
    <%= form.text_field :caption %>
  </p>

  <p>
    <%= form.label :image %><br>
    <%= form.file_field :image, :class => 'form-control-file' %>
  </p>

  <p>
    <%= form.submit 'Save Photo', :class => 'btn btn-primary' %>
  </p>
<% end %>
